---
import "swiper/css/bundle";

const slides = [
  {
    imgSrc: "http://nutme.cl/wp-content/uploads/2021/05/2_terreno2-e1651100258745.jpg",
    author: "Alejandro Pérez Matus"
  },
  {
    imgSrc: "http://nutme.cl/wp-content/uploads/2022/04/ALEseptALGeditada_5-scaled.jpg",
    author: "Alejandro Pérez Matus"
  },
  {
    imgSrc: "http://nutme.cl/wp-content/uploads/2022/04/ALEseptALGeditada_3-scaled.jpg",
    author: "Alejandro Pérez Matus"
  },
  {
    imgSrc: "http://nutme.cl/wp-content/uploads/2021/05/unnamed-11.jpg",
    author: "Alejandro Pérez Matus"
  }
];
---

<!-- Slider main container -->
<div class="swiper swiper-scale-effect">
  <!-- Swiper -->
  <div class="swiper-container">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      {slides.map((slide) => (
        <div class="swiper-slide">
          <div class="slide-01">
            <div class="image-container">
              <img src={slide.imgSrc} alt={slide.author} />
              <div class="author-name">
                <span class="photo-by">Foto por</span>
                <span class="name">{slide.author}</span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    <!-- Add pagination -->
    <div class="swiper-pagination"></div>
    <!-- Add navigation arrows -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</div>

<style>
  .swiper-container {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    height: 450px; /* Manteniendo el mismo tamaño */
    box-sizing: border-box;
  }
  
  .swiper-slide {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .slide-01 {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15); /* Sombra sutil añadida */
  }
  
  .image-container {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: 15px;
    position: relative;
  }
  
  .swiper-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 15px;
  }
  
  .author-name {
    position: absolute;
    bottom: 20px;
    right: 20px;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 14px;
    z-index: 10;
    backdrop-filter: blur(4px);
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    line-height: 1.3;
  }
  
  .photo-by {
    font-size: 10px;
    opacity: 0.8;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .name {
    font-weight: 500;
    font-size: 13px;
  }
  
  /* Estilos personalizados para la paginación (mantenidos igual) */
  .swiper-pagination {
    bottom: 15px !important;
  }
  
  .swiper-pagination-bullet {
    width: 12px !important;
    height: 12px !important;
    margin: 0 6px !important;
    opacity: 0.7 !important;
    background: #fff;
    transition: all 0.3s ease;
  }
  
  .swiper-pagination-bullet-active {
    width: 30px !important;
    border-radius: 6px !important;
    background: #fff !important;
    opacity: 1 !important;
  }
  
  .swiper-button-next,
  .swiper-button-prev {
    color: #fff;
  }
</style>

<script>
  import Swiper from 'swiper/bundle';
  
  document.addEventListener('DOMContentLoaded', function() {
    var mySwiper = new Swiper('.swiper-container', {
      direction: 'horizontal',
      loop: true,
      centeredSlides: true,
     
      // If we need pagination
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
        dynamicBullets: false, // Desactivado para permitir estilo personalizado
      },
      // Navigation arrows
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      // Autoplay
      autoplay: {
        delay: 2500,
        disableOnInteraction: false,
      },
      // Use slide or fade transition effect
      speed: 2000,
      effect: 'fade',
      fadeEffect: {
        crossFade: true,
      },
    });
  });
</script>