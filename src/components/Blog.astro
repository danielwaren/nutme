---
interface Props {
  title: string;
  date: Date;
  image: string;
  alt?: string;
  content: string;
}

const { 
  title, 
  date, 
  image, 
  alt = "Imagen del artículo", 
  content 
} = Astro.props;

const formatDate = (date: Date) => {
  const options: Intl.DateTimeFormatOptions = { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  };
  return date.toLocaleDateString('es-ES', options);
};

const formattedDate = formatDate(date);
---

<article style="padding-top: 15vh;" class="max-w-3xl mx-auto px-4">
  <!-- Imagen Principal -->
  <div class="mb-6">
    <img 
      src={image} 
      alt={alt} 
      class="w-full h-auto rounded-lg shadow-md object-cover max-h-96"
    />
  </div>
  
  <!-- Cabecera del Post -->
  <header class="mb-8 text-center">
    <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-3">{title}</h1>
    <time class="text-sm text-gray-500 italic block mb-4">{formattedDate}</time>
    
    <!-- Botones para compartir -->
    <div class="flex justify-center space-x-4 mt-4">
      <button class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-full flex items-center text-sm transition-colors">
